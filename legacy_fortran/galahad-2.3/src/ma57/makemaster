	$(CP) $(MA57)/fd05d.f $(OBJ)/fd05d.f90
	cd $(OBJ); $(FORTRAN) -o fd05d.o $(FFLAGS77) fd05d.f90
	cd $(OBJ); $(HARR) fd05d.o ; $(RM) fd05d.f90 fd05d.o
	@printf '[ OK ]\n'

